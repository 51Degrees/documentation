{% extends "groups-info" %}

{% block content %}
  <header class="g-info__header">
    <h3 class="g-info__heading">
      {{ option.name }}
      <span class="c-option__additional">
        {% if option.vendor != "" %}
        <span class="c-option__vendor"><img src="/images/{{ option.vendorIcon }}" alt="{{ option.vendor }}" /></span>
        {% endif %}
        {% if option.billable == true %}
        <span class="c-option__billable"><span>Billable</span></span>
        {% endif %}
      </span>
    </h3>
    {% if option.vendor %}
    <h2 class="g-info__by">By {{ option.vendor }}</h2>
    {% endif %}
  </header>
  {% if option.vendorLogo %}
  <div class="g-info__logo">
    <img src="/images/{{ option.vendorLogo }}" alt="{{ option.vendor }}" />
  </div>
  {% endif %}
  {% if option.billable %}
  <p class="g-info__banner">
    <span class="c-option__billable"><span>Billable</span></span>
    Paid feature, use free for 30 days</p>
  {% endif %}
  {% include "components-select" with {'id': option.id, 'alternative': true, 'label': 'Select this property', 'large': true} %}
